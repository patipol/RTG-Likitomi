.tc_tabs {
	border-bottom: 5px solid #d9e5f1;
		
	clear: both;
	
	width: 100%;
	height: 34px;
	
	position: relative;
	overflow: hidden;
	
	-webkit-user-select: none;
	-webkit-touch-callout: none;
}

.tc_tabs .tc_tabs_items {
	position: absolute;
	background: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#ddd));
	width: 100%;
	height: 34px;
	left: 38px;
	overflow-x: hidden;
}

.tc_tabs .tc_tabs_items .tc_tabs_moveable {
	position: absolute;
	width: auto;
	height: 34px;
}

.tc_tabs .tc_tabs_items .tc_tabs_moveable .tc_tabs_item {
	float: left;
	background: -webkit-gradient(linear, left top, left bottom, from(#f9fbfc), to(#fff));
	border: 1px solid #d9e5f1;
	width: auto;
	height: 34px;
	padding: 0 8px;
	
	white-space:nowrap;
	text-overflow:ellipsis;
	overflow:hidden;
	
	line-height: 34px;
	
	font-size: 18px;
	color: #718abe;
	
	-webkit-border-top-left-radius: 8px;
	-webkit-border-top-right-radius: 15px;
}

.tc_tabs .tc_tabs_items .tc_tabs_moveable .tc_tabs_item.tc_on {
	border: 1px solid #d9e5f1;
	background: -webkit-gradient(linear, left top, left bottom, from(#f9fbfd), to(#e5edf5));
	color: #FF5500;
}

.tc_tabs_arrow {
	border: 1px solid #d9e5f1;
	position: absolute;
	width: 36px;
	height: 34px;
}

.tc_tabs .tc_tabs_arrow.tc_tabs_arrow_left {
	background: #d9e5f1  url(../img/left_arrow.png) no-repeat;
	left: 0px;
}

.tc_tabs .tc_tabs_arrow.tc_tabs_arrow_right {
	background: #d9e5f1 url(../img/right_arrow.png) no-repeat;
	right: 0;
}

.tc_tabs .tc_tabs_arrow.tc_tabs_arrow_left.tc_pressed {
	background-color: #fff;
}

.tc_tabs .tc_tabs_arrow.tc_tabs_arrow_right.tc_pressed {
	background-color: #fff;
}

.tc_tab {
	display: none;
}

.tc_tab.tc_on {
	display: block;
}